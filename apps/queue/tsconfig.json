{
  "compilerOptions": {
    /* Language and Environment */
    "target": "ES2022",                                  /* Updated to ES2022 for better async/await support */
    "lib": ["ES2022"],                                   /* Include ES2022 library */

    /* Modules */
    "module": "ESNext",                                  /* Use ESNext modules */
    "moduleResolution": "bundler",                       /* Use bundler resolution for monorepo */
    "rootDir": "./src",
    
    /* Module Resolution */
    "baseUrl": "./",                                     /* Enable baseUrl for path mapping */
    "paths": {                                           /* Path mapping for workspace packages */
      "@repo/db": ["../../packages/db/src/index.ts"]
    },
    "resolveJsonModule": true,                           /* Allow importing JSON files */
    "allowSyntheticDefaultImports": true,               /* Allow default imports from modules with no default export */
    
    /* JavaScript Support */
    "allowJs": true,                                     /* Allow JavaScript files */

    /* Emit */
    "outDir": "./dist",
    "declaration": true,                                 /* Generate .d.ts files */
    "declarationMap": true,                             /* Generate declaration source maps */
    "sourceMap": true,                                  /* Generate source maps for debugging */

    /* Interop Constraints */
    "isolatedModules": true,                            /* Ensure each file can be transpiled independently */
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    /* Type Checking */
    "strict": true,
    "noImplicitReturns": true,                          /* Ensure all code paths return a value */
    "noFallthroughCasesInSwitch": true,                 /* Ensure switch cases don't fall through */
    "noUnusedLocals": true,                             /* Report unused local variables */
    "noUnusedParameters": true,                         /* Report unused parameters */

    /* Completeness */
    "skipLibCheck": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}